@model IEnumerable<criptowebbcc.Models.Consulta.TransacaoGrpProduto>

@{
    ViewData["Title"] = "grpByProduto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Agrupar por Produto</h1>

<p>
    <a asp-controller="transacoes" asp-action="index" class="btn btn-outline-primary">Voltar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id do Produto
            </th>
            <th>
                Data de Compra
            </th>
            <th>
                Nome do Cliente
            </th>
            <th>
                Valor da Transacao
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.produto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.clienteNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

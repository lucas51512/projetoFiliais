@model criptowebbcc.Models.Filial

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Filial</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="nomeFilial" class="control-label"></label>
                <input asp-for="nomeFilial" class="form-control" />
                <span asp-validation-for="nomeFilial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cidadeFilial" class="control-label"></label>
                <input asp-for="cidadeFilial" class="form-control" />
                <span asp-validation-for="cidadeFilial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estadoFilial" class="control-label"></label>
                <select asp-for="estadoFilial" asp-items="ViewBag.bagEstado" class="form-control">
                    <option selected="selected" value="">Selecione um estado</option>
                </select>
                <span asp-validation-for="estadoFilial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
